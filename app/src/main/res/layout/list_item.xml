<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <Button
        android:id="@+id/increment_btn"
        style="@style/increment_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/darker_gray"
        android:text="+"
        android:focusable="false"/>

    <LinearLayout
        android:id="@+id/tally_id"
        android:layout_weight="1"
        android:layout_gravity="center"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackground"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tally_name"
            style="@style/tally_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="First Counter"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/tally_value"
            style="@style/tally_value"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="$0"
            android:textColor="@android:color/background_dark"
            />
    </LinearLayout>

    <Button
        android:id="@+id/decrement_btn"
        style="@style/decrement_btn"
        android:background="@android:color/darker_gray"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="-"
        android:focusable="false"/>
</LinearLayout>